{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"lib": ["es6"],
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
